    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const forms = document.querySelectorAll('form');

            function saveFormDataToLocalStorage(formId) {
                const form = document.getElementById(formId);
                const formData = new FormData(form);
                for (const [key, value] of formData.entries()) {
                    localStorage.setItem(key, value);
                }
            }

            function loadFormDataFromLocalStorage() {
                forms.forEach(form => {
                    const elements = form.elements;
                    for (let i = 0; i < elements.length; i++) {
                        const element = elements[i];
                        if (element.name && localStorage.getItem(element.name)) {
                            if (element.type === 'radio' || element.type === 'checkbox') {
                                element.checked = localStorage.getItem(element.name) === element.value;
                            } else {
                                element.value = localStorage.getItem(element.name);
                            }
                        }
                    }
                });
            }

            loadFormDataFromLocalStorage();

            forms.forEach(form => {
                form.addEventListener('input', () => {
                    saveFormDataToLocalStorage(form.id);
                });
            });

            window.showNextForm = function (part) {
                const parts = ['formPart1', 'formPart2', 'formPart3', 'formPart4'];
                parts.forEach((p) => {
                    document.getElementById(p).classList.remove('visible');
                });
                barProgress = (part - 1) / (parts.length - 1); // Calcula barra de progresso
                document.getElementById(`formPart${part}`).classList.add('visible');
                window.scrollTo(0, 0);

                // DESBLOQUEIO DE ITENS
                if (part > 2) {
                    unlocks.food = true;
                }
                unlockItems();
            }

            async function handleSubmit(formData) {
                const formJSON = Object.fromEntries(formData.entries());
                console.log(formJSON);

                try {
                    const response = await fetch("/resenhas", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(formJSON),
                    });

                    if (response.ok) {
                        const data = await response.json();
                        alert('Resposta adicionada com sucesso!');
                        console.log('Sucesso no modelo "resenha":', data);

                        localStorage.clear(); // Limpa o localStorage após o envio bem-sucedido

                        // Redirecionamento com base na seleção do usuário
                        const selectedOption = formJSON.next_forms;
                        let redirectUrl;
                        switch (selectedOption) {
                            case 'have':
                                redirectUrl = '/formsHave';
                                break;
                            case 'had':
                                redirectUrl = '/formsHad';
                                break;
                            case 'want':
                                redirectUrl = '/formsWant';
                                break;
                            case 'null':
                                redirectUrl = '/formsNull';
                                break;
                            default:
                                redirectUrl = '/generalForms';
                        }
                        window.location.href = redirectUrl;
                    } else {
                        const errorData = await response.json();
                        console.error('Erro ao criar registro no modelo "resenha":', errorData);
                        alert('Erro ao enviar o formulário');
                    }
                } catch (error) {
                    console.error("Error:", error);
                    alert("Erro ao enviar formulário: " + error.message);
                }
            }

            document.querySelectorAll('.button-container button').forEach(button => {
                button.addEventListener('click', function () {
                    const formData = new FormData();
                    forms.forEach(form => {
                        new FormData(form).forEach((value, key) => {
                            formData.append(key, value);
                        });
                    });
                    formData.append('next_forms', this.getAttribute('data-next-forms'));
                    handleSubmit(formData);
                });
            });
        });

        $(document).ready(function () {
            $("#nav-icon3").click(function () {
                $(this).toggleClass("open");
                $('#menu-overlay').fadeToggle(300);
            });
        });

        window.onload = function () {
            mascotAwaken(['resenhaForm1', 'resenhaForm2', 'resenhaForm3'], 12);
        };
    </script>

